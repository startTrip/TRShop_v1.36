<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
              android:background="@color/address_bg"
    android:orientation="vertical">

    <TextView
        android:id="@+id/other2_title"
        android:layout_width="fill_parent"
        android:layout_height="30dp"
        android:layout_marginLeft="10dp"
        android:gravity="center_vertical"
        android:text="标题"
        android:textColor="@color/text_color"
        android:textSize="15sp" />

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_weight="1"
        android:layout_marginLeft="10dp"
        android:orientation="horizontal">

        <shop.trqq.com.supermarket.utils.RoundRectImageView
            android:id="@+id/other2_image1"
            style="@style/home_img_style"
           />

        <shop.trqq.com.supermarket.utils.RoundRectImageView
            android:id="@+id/other2_image2"
            style="@style/home_img_style"
            />


        <shop.trqq.com.supermarket.utils.RoundRectImageView
            android:id="@+id/other2_image3"
            style="@style/home_img_style"
            />
    </LinearLayout>
</LinearLayout>