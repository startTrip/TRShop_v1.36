<?xml version="1.0" encoding="utf-8"?>
<app:android.support.v7.widget.CardView xmlns:android="http://schemas.android.com/apk/res/android"
                                        android:layout_width="match_parent"
                                        android:layout_height="match_parent"
                                        xmlns:app="http://schemas.android.com/apk/res-auto"
                                        android:layout_marginTop="4dp"
                                        android:layout_marginBottom="4dp"
                                        android:layout_marginStart="8dp"
                                        android:layout_marginEnd="8dp"
                                        app:cardCornerRadius="2dp"
    >

    <LinearLayout
        android:layout_width="fill_parent"
        android:layout_height="wrap_content"
        android:background="@color/white"
        android:padding="3dp"
        android:orientation="vertical">

        <ImageView

            android:id="@+id/market_home_goods_iv"
            android:layout_width="fill_parent"
            android:layout_height="180dp"
            android:layout_marginTop="5dp"
            android:scaleType="centerCrop"
            />

        <TextView
            android:id="@+id/market_home_goods_name"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_margin="5dp"
            android:ellipsize="end"
            android:lines="2"
            android:text=""
            android:textColor="@color/black_text"
            android:textSize="14sp" />


        <TextView
            android:id="@+id/market_home_goods_price"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_margin="5dp"
            android:lineSpacingExtra="3dp"
            android:text=""
            android:textColor="@color/red"
            android:textSize="18sp" />

        <!--<View-->
            <!--style="@style/horizontal_cut_line"-->
            <!--android:layout_width="match_parent"-->
            <!--android:layout_height="1dp" />-->
    </LinearLayout>


    <ImageView
        android:layout_width="fill_parent"
        android:layout_height="180dp"
        android:layout_marginTop="5dp"
        android:scaleType="fitXY"
        android:src="@drawable/good1bg"
        android:visibility="gone" />

</app:android.support.v7.widget.CardView>