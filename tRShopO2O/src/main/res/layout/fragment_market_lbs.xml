<FrameLayout xmlns:android="http://schemas.android.com/apk/res/android"
             xmlns:tools="http://schemas.android.com/tools"
             android:layout_width="match_parent"
             android:layout_height="match_parent"

             tools:context="shop.trqq.com.supermarket.fragments.MarketLbsFragment"
    >

    <com.baidu.mapapi.map.MapView
        android:id="@+id/baidu_mapview"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:clickable="true"
        >

    </com.baidu.mapapi.map.MapView>

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="75dp"
        >
    <!-- 顶部的标题栏 -->
    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="50dp"
        android:background="@color/white"
        >

        <TextView
            android:id="@+id/home_location"
            android:paddingLeft="20dp"
            android:layout_width="wrap_content"
            android:layout_height="match_parent"
            android:drawableLeft="@mipmap/navigation_black"
            android:gravity="center"
            android:text=" 我的位置:"
            />

        <TextView
            android:id="@+id/market_myaddress"
            android:layout_width="200dp"
            android:layout_height="match_parent"
            android:layout_toRightOf="@id/home_location"
            android:maxLines="1"
            android:gravity="center_vertical"
            android:textColor="#000000"
            android:textSize="14sp"
            />
        <!-- 分割线-->
        <View
            android:layout_width="match_parent"
            android:layout_height="0.5dp"
            android:layout_alignParentBottom="true"
            android:background="@color/gray_1"
            />
    </RelativeLayout>

    <LinearLayout
        android:layout_alignParentBottom="true"
        android:layout_width="match_parent"
        android:layout_height="25dp"
        android:orientation="horizontal"
        android:background="@color/colorAlpha"
        android:paddingLeft="16dp"
        android:paddingRight="16dp"
        >
        <TextView
            android:id="@+id/market_small_location"
            android:layout_width="wrap_content"
            android:layout_height="match_parent"
            android:gravity="center_vertical"
            android:drawableLeft="@mipmap/ic_location_box_small"
            android:text=" 万能居超市"
            android:textSize="12sp"
            />
        <TextView
            android:id="@+id/my_small_location"
            android:layout_width="wrap_content"
            android:layout_height="match_parent"
            android:layout_marginLeft="20dp"
            android:gravity="center_vertical"
            android:drawableLeft="@mipmap/ic_location_fresh_small"
            android:text=" 为我的位置"
            android:textSize="12sp"
            />
        <TextView
            android:layout_width="wrap_content"
            android:layout_height="match_parent"
            android:text="黄色"
            android:layout_marginLeft="16dp"
            android:gravity="center_vertical"
            android:textColor="@color/yellow"
            android:textSize="12sp"
            />
        <TextView
            android:gravity="center_vertical"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:text="为配送区域"
            android:textSize="12sp"
            />
    </LinearLayout>
    </RelativeLayout>
    <RelativeLayout
        android:layout_width="wrap_content"
        android:layout_height="100dp"
        android:layout_gravity="bottom"
        android:layout_marginBottom="60dp"
        android:layout_marginLeft="10dp"
        >

        <ImageView
            android:id="@+id/market_relocation"
            android:layout_alignParentBottom="true"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:src="@mipmap/mian_dingwei"
            />

        <ImageView
            android:id="@+id/market_location"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_above="@id/market_relocation"
            android:layout_alignParentTop="true"
            android:src="@mipmap/chaoshi"
            />
    </RelativeLayout>
</FrameLayout>
