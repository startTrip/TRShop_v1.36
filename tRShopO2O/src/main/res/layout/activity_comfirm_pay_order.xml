<?xml version="1.0" encoding="utf-8"?>
<LinearLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    tools:context="shop.trqq.com.supermarket.activitys.ComfirmPayOrderActivity"
    >

    <!-- 标题栏 -->
    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="50dp"
        >

        <ImageView
            android:id="@+id/comfirmpay_back"
            android:layout_width="wrap_content"
            android:layout_height="match_parent"
            android:paddingLeft="5dp"
            android:paddingRight="5dp"
            android:src="@mipmap/tm_actionbar_btn_back"
            />

        <TextView
            android:layout_centerInParent="true"
            android:layout_width="wrap_content"
            android:layout_height="match_parent"
            android:gravity="center"
            android:text="支付订单"
            android:textSize="17sp"
            android:textColor="@color/black"
            />

    </RelativeLayout>
    <View style="@style/dividerline"/>


    <ScrollView
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:layout_weight="1"
        >
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:orientation="vertical"
            >
            <TextView
                android:layout_width="match_parent"
                android:layout_height="20dp"
                android:background="@color/bg_gray"
                android:gravity="center|left"
                android:paddingLeft="12dp"
                android:text="请选择支付方式"
                android:textColor="@color/mainTabFont"
                android:textSize="12sp" />

            <TextView
                android:layout_width="match_parent"
                android:layout_height="33dp"
                android:background="@color/white"
                android:gravity="center|left"
                android:paddingLeft="16dp"
                android:text="支付方式"
                android:textColor="@color/black"
                android:textSize="15sp" />

            <View style="@style/dividerline" />

            <!--支付宝 -->
            <RelativeLayout
                android:id="@+id/rl_alipay"
                android:layout_width="match_parent"
                android:layout_height="45dp"
                android:background="@drawable/selector_layout_press">

                <ImageView
                    android:id="@+id/iv_ali"
                    android:layout_width="33dp"
                    android:layout_height="33dp"
                    android:layout_centerVertical="true"
                    android:layout_marginLeft="16dp"
                    android:src="@mipmap/alipay" />

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="match_parent"
                    android:layout_centerVertical="true"
                    android:layout_marginLeft="16dp"
                    android:layout_toRightOf="@+id/iv_ali"
                    android:gravity="center|left"
                    android:text="支付宝"
                    android:textColor="@color/black"
                    android:textSize="18sp" />

                <ImageView
                    android:padding="10dp"
                    android:id="@+id/iv_alipay_select"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_alignParentRight="true"
                    android:layout_centerVertical="true"
                    android:layout_marginLeft="3dp"
                    android:src="@drawable/selector_payway" />

            </RelativeLayout>

            <View style="@style/dividerline"/>
            <!-- 微信 -->
            <RelativeLayout
                android:id="@+id/rl_wechat"
                android:layout_width="match_parent"
                android:layout_height="45dp"
                android:background="@drawable/selector_layout_press">

                <ImageView
                    android:id="@+id/iv_wechat"
                    android:layout_width="33dp"
                    android:layout_height="33dp"
                    android:layout_centerVertical="true"
                    android:layout_marginLeft="16dp"
                    android:src="@mipmap/weixin" />

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="match_parent"
                    android:layout_centerVertical="true"
                    android:layout_marginLeft="16dp"
                    android:layout_toRightOf="@+id/iv_wechat"
                    android:gravity="center|left"
                    android:text="微信支付"
                    android:textColor="@color/black"
                    android:textSize="18sp" />

                <ImageView
                    android:id="@+id/iv_wechat_select"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_alignParentRight="true"
                    android:layout_centerVertical="true"
                    android:padding="10dp"
                    android:layout_marginLeft="3dp"
                    android:src="@drawable/selector_payway" />
            </RelativeLayout>

            <Button
                android:id="@+id/btn_pay"
                android:layout_width="match_parent"
                android:layout_height="50dp"
                android:layout_margin="15dp"
                android:background="@drawable/selector_btn_green"
                android:enabled="false"
                android:text="确认"
                android:textColor="@color/white"
                android:textSize="17sp" />
        </LinearLayout>

    </ScrollView>
</LinearLayout>
