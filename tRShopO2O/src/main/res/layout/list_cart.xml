<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="fill_parent"
    android:layout_height="wrap_content">

    <LinearLayout
        android:id="@+id/list_CheckBox"
        android:layout_width="fill_parent"
        android:layout_height="wrap_content"
        android:background="@color/white"
        android:orientation="vertical">

        <TextView
            android:id="@+id/cartgroup_title"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="center_vertical"
            android:layout_marginBottom="6dp"
            android:layout_marginTop="6dp"
            android:paddingLeft="10dp"
            android:ellipsize="end"
            android:text="店铺名称：泰润自营"
            android:textColor="@color/black_text"
            android:textSize="17sp" />

        <View
            style="@style/horizontal_cut_line"
            android:layout_width="match_parent" />

        <LinearLayout
            android:id="@+id/cart_goodLayout"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:background="@color/activity_graybg"
            android:orientation="horizontal"
            android:paddingLeft="16dp"
            android:paddingBottom="4dp"
            android:paddingTop="4dp">

            <ImageView
                android:id="@+id/cart_img"
                android:layout_width="100dp"
                android:layout_height="match_parent"
                android:layout_marginRight="10dp"
                android:scaleType="fitCenter"
                android:src="@drawable/icon_downloading" />

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="vertical">

                <TextView
                    android:id="@+id/cart_title"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:ellipsize="end"
                    android:lines="2"
                    android:text="我是商品 型号ABC753(防火防水防BUG)"
                    android:textColor="@color/black_text"
                    android:textSize="15sp" />

                <TextView
                    android:id="@+id/cart_price"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:ellipsize="end"
                    android:lineSpacingExtra="3dp"
                    android:paddingTop="3dp"
                    android:text="单价:¥188.00"
                    android:textColor="@color/red"
                    android:textSize="15sp" />

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content">

                    <TextView
                        android:id="@+id/pop_reduce"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:background="@drawable/zhijiao_gray"
                        android:paddingBottom="10dp"
                        android:paddingLeft="12dp"
                        android:paddingRight="12dp"
                        android:paddingTop="10dp"
                        android:text="一" />

                    <TextView
                        android:id="@+id/pop_num"
                        android:layout_width="60dp"
                        android:layout_height="wrap_content"
                        android:background="@drawable/zhijiao"
                        android:gravity="center"
                        android:padding="10dp"
                        android:text="1" />

                    <TextView
                        android:id="@+id/pop_add"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_marginRight="10dp"
                        android:background="@drawable/zhijiao_gray"
                        android:paddingBottom="10dp"
                        android:paddingLeft="13dp"
                        android:paddingRight="13dp"
                        android:paddingTop="10dp"
                        android:text="+" />
                </LinearLayout>
            </LinearLayout>
        </LinearLayout>
    </LinearLayout>

</LinearLayout>